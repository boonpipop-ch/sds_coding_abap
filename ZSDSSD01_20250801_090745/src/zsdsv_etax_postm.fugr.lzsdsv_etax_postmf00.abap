     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZSDSSDC025 WHERE
  POSTAL_FROM = ZSDSV_ETAX_POSTM-POSTAL_FROM AND
  POSTAL_TO = ZSDSV_ETAX_POSTM-POSTAL_TO .
    IF SY-SUBRC = 0.
    DELETE ZSDSSDC025 .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZSDSSDC025 WHERE
  POSTAL_FROM = ZSDSV_ETAX_POSTM-POSTAL_FROM AND
  POSTAL_TO = ZSDSV_ETAX_POSTM-POSTAL_TO .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
