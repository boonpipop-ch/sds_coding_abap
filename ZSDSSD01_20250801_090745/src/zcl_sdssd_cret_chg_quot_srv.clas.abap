               CS_QUOTATION      = CS_QUOTATION
               CT_QUOTATIONITEM  = CT_QUOTATIONITEM
               CT_SCHEDULELINE   = CT_SCHEDULELINE
               CT_RESPONSE       = CT_RESPONSE
         ).
        ENDIF.

      WHEN 'U'.
        VALIDATE_HEADER_CHANGE(
           EXPORTING
             IF_RECORD_MODE    = CS_QUOTATION-FLAG
           IMPORTING
             EF_INVALID        = EF_INVALID
           CHANGING
             CS_QUOTATION      = CS_QUOTATION
             CT_RESPONSE       = CT_RESPONSE
       ).

        IF EF_INVALID = SPACE." No Error
          VALIDATE_ITEM_CHANGE(
             EXPORTING
               IF_RECORD_MODE    = CS_QUOTATION-FLAG
             IMPORTING
               EF_INVALID        = EF_INVALID
             CHANGING
               CS_QUOTATION      = CS_QUOTATION
               CT_QUOTATIONITEM  = CT_QUOTATIONITEM
               CT_SCHEDULELINE   = CT_SCHEDULELINE
               CT_RESPONSE       = CT_RESPONSE
         ).
        ENDIF.

    ENDCASE.

    "Validate both Create and Change
    VALIDATE_HEADER(
           EXPORTING
             IF_RECORD_MODE    = CS_QUOTATION-FLAG
           IMPORTING
             EF_INVALID        = EF_INVALID
           CHANGING
             CS_QUOTATION      = CS_QUOTATION
             CT_RESPONSE       = CT_RESPONSE
       ).

    VALIDATE_ITEM(
       EXPORTING
         IF_RECORD_MODE    = CS_QUOTATION-FLAG
       IMPORTING
         EF_INVALID        = EF_INVALID
       CHANGING
         CS_QUOTATION      = CS_QUOTATION
         CT_QUOTATIONITEM  = CT_QUOTATIONITEM
         CT_SCHEDULELINE   = CT_SCHEDULELINE
         CT_RESPONSE       = CT_RESPONSE
   ).

    READ TABLE CT_RESPONSE WITH KEY RESP_STATUS = GC_ERROR TRANSPORTING NO FIELDS.
    IF SY-SUBRC = 0.
      EF_INVALID = 'X'.
    ENDIF.
  endmethod.


  METHOD VALIDATE_ITEM.
*-----------------------------------------------------------------------
*  Program ID         : ZCL_SDSSD_CRET_CHG_QUOT_SRV / VALIDATE_ITEM
*  Creation Date      : 06.06.2024
*  Author             : Zulkiff B. (Eviden)
*  Add-on ID          : ZSDI033
*  Description        : Validate data header data from Salesforce
*  Purpose            : Validate Header
*  Copied from        : N/A
*  Restriction        : N/A
*-----------------------------------------------------------------------
*  CHANGE HISTORY
*-----------------------------------------------------------------------
*  Date        Task #      Programmer  Description
*-----------------------------------------------------------------------
*  DD.MM.YYYY  TR no.      ABAP Name   Detail
*-----------------------------------------------------------------------
    DATA: LS_RESPONSE    TYPE ZSDSCAS006,
          LV_MATNR       TYPE MATNR,
          LV_AMOUNT      TYPE CHAR20,
          LV_MEINS       TYPE MEINS,
          LV_MSG         TYPE ZSDSDE_REST_MESSAGE,
          LV_ITEMNUMBER  TYPE POSNR,
          LV_SCHEDNUMBER TYPE ETENR.

    LOOP AT CT_QUOTATIONITEM ASSIGNING FIELD-SYMBOL(<LFS_QUOTATIONITEM>).

      IF <LFS_QUOTATIONITEM>-SAPITEMNUMBER IS INITIAL.
        "Missing Item Number
        APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                   IF_MESSAGE = TEXT-E35
                          CHANGING CT_RESPONSE = CT_RESPONSE
                                   CS_QUOTATION = CS_QUOTATION ).
      ELSE.
        CLEAR: LV_AMOUNT .
        LV_AMOUNT = <LFS_QUOTATIONITEM>-SAPITEMNUMBER.
        CONDENSE LV_AMOUNT.
        VALIDATE_AMOUNT( EXPORTING AMOUNT_IN     = LV_AMOUNT
                         IMPORTING AMOUNT_OUT    = LV_AMOUNT
                                   CS_RESPONSE = LS_RESPONSE
                        ).
        IF LS_RESPONSE-RESP_STATUS = GC_ERROR.
          APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                     IF_MESSAGE = TEXT-E51
                            CHANGING CT_RESPONSE = CT_RESPONSE
                                     CS_QUOTATION = CS_QUOTATION ).
        ELSE.
          <LFS_QUOTATIONITEM>-SAPITEMNUMBER = LV_AMOUNT.
        ENDIF.
      ENDIF.

      IF <LFS_QUOTATIONITEM>-HIGHERLEVEL IS NOT INITIAL.
        CLEAR: LV_AMOUNT .
        LV_AMOUNT = <LFS_QUOTATIONITEM>-HIGHERLEVEL.
        CONDENSE LV_AMOUNT.
        VALIDATE_AMOUNT( EXPORTING AMOUNT_IN     = LV_AMOUNT
                         IMPORTING AMOUNT_OUT    = LV_AMOUNT
                                   CS_RESPONSE = LS_RESPONSE
                        ).
        IF LS_RESPONSE-RESP_STATUS = GC_ERROR.
          APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                     IF_MESSAGE = TEXT-E50
                            CHANGING CT_RESPONSE = CT_RESPONSE
                                     CS_QUOTATION = CS_QUOTATION ).
        ELSE.
          <LFS_QUOTATIONITEM>-HIGHERLEVEL = LV_AMOUNT.
        ENDIF.
      ENDIF.

      IF <LFS_QUOTATIONITEM>-MATERIALNUMBER IS INITIAL.
        "Missing material number
        APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                   IF_MESSAGE = TEXT-E36
                          CHANGING CT_RESPONSE = CT_RESPONSE
                                   CS_QUOTATION = CS_QUOTATION ).
      ELSE.
        CALL FUNCTION 'CONVERSION_EXIT_MATN1_INPUT'
          EXPORTING
            INPUT        = <LFS_QUOTATIONITEM>-MATERIALNUMBER
          IMPORTING
            OUTPUT       = LV_MATNR
          EXCEPTIONS
            LENGTH_ERROR = 1
            OTHERS       = 2.
        IF SY-SUBRC <> 0.
          CLEAR: LV_MATNR.
        ENDIF.

        SELECT SINGLE MATNR                     ##WARN_OK ##NEEDED
          FROM MVKE
         WHERE MATNR = @LV_MATNR
           AND VKORG IN @GRT_SALESORG
         INTO @DATA(LS_MVKE).
        IF SY-SUBRC <> 0.
          APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                     IF_MESSAGE = TEXT-E37
                            CHANGING CT_RESPONSE = CT_RESPONSE
                                     CS_QUOTATION = CS_QUOTATION ).
        ENDIF.
      ENDIF.

      "Quantity
      IF <LFS_QUOTATIONITEM>-QUANTITY IS INITIAL.
        "Missing target quantity
        APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                   IF_MESSAGE = TEXT-E38
                          CHANGING CT_RESPONSE = CT_RESPONSE
                                   CS_QUOTATION = CS_QUOTATION ).
      ELSE.
        CLEAR: LV_AMOUNT .
        LV_AMOUNT = <LFS_QUOTATIONITEM>-QUANTITY.
        CONDENSE LV_AMOUNT.
        VALIDATE_AMOUNT( EXPORTING AMOUNT_IN     = LV_AMOUNT
                         IMPORTING AMOUNT_OUT    = LV_AMOUNT
                                   CS_RESPONSE   = LS_RESPONSE
                        ).
        IF LS_RESPONSE-RESP_STATUS = GC_ERROR.
          APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                     IF_MESSAGE = LS_RESPONSE-RESP_MESSAGE
                            CHANGING CT_RESPONSE = CT_RESPONSE
                                     CS_QUOTATION = CS_QUOTATION ).
        ELSE.
          <LFS_QUOTATIONITEM>-QUANTITY = LV_AMOUNT.
        ENDIF.
      ENDIF.

      "SalesUnit
      IF <LFS_QUOTATIONITEM>-SALESUNIT IS INITIAL.
        "Missing Sales Unit
        APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                   IF_MESSAGE = TEXT-E39
                          CHANGING CT_RESPONSE = CT_RESPONSE
                                   CS_QUOTATION = CS_QUOTATION ).
      ELSE.
        CLEAR: LV_MEINS.
        LV_MEINS = <LFS_QUOTATIONITEM>-SALESUNIT.

* Validate in table
        SELECT SINGLE MSEHI
          INTO LV_MEINS
          FROM T006
         WHERE MSEHI EQ LV_MEINS.
        IF SY-SUBRC NE 0.
          CALL FUNCTION 'CONVERSION_EXIT_CUNIT_INPUT'
            EXPORTING
              INPUT          = <LFS_QUOTATIONITEM>-SALESUNIT
            IMPORTING
              OUTPUT         = LV_MEINS
            EXCEPTIONS
              UNIT_NOT_FOUND = 1
              OTHERS         = 2.
          IF SY-SUBRC <> 0.
            CLEAR: LV_MEINS.
          ENDIF.
          SELECT SINGLE MSEHI
            INTO LV_MEINS
            FROM T006
           WHERE MSEHI EQ LV_MEINS.
          IF SY-SUBRC NE 0.
            CLEAR: LV_MSG.
*         Invalid unit:
            LV_MSG = |{ TEXT-E40 } { <LFS_QUOTATIONITEM>-SALESUNIT }|.
            APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                       IF_MESSAGE = LV_MSG
                              CHANGING CT_RESPONSE = CT_RESPONSE
                                       CS_QUOTATION = CS_QUOTATION ).
          ENDIF.
        ENDIF.
      ENDIF.

      "Plant
      IF <LFS_QUOTATIONITEM>-PLANT IS INITIAL.
        "Missing Plant
        APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                   IF_MESSAGE = TEXT-E41
                          CHANGING CT_RESPONSE = CT_RESPONSE
                                   CS_QUOTATION = CS_QUOTATION ).
      ELSE.
        SELECT SINGLE WERKS     ##NEEDED
          FROM T001W
         WHERE WERKS = @<LFS_QUOTATIONITEM>-PLANT
          INTO @DATA(LV_WERKS).
        IF SY-SUBRC <> 0.
          "Plant does not exist
          APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                     IF_MESSAGE = TEXT-E42
                            CHANGING CT_RESPONSE = CT_RESPONSE
                                     CS_QUOTATION = CS_QUOTATION ).
        ENDIF.
      ENDIF.


      "StorageLocation
      IF <LFS_QUOTATIONITEM>-STORAGELOCATION IS NOT INITIAL.
        SELECT SINGLE WERKS,LGORT     ##NEEDED
          FROM T001L
         WHERE WERKS = @<LFS_QUOTATIONITEM>-PLANT
           AND LGORT = @<LFS_QUOTATIONITEM>-STORAGELOCATION
          INTO @DATA(LS_T001L).
        IF SY-SUBRC <> 0.
          APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                     IF_MESSAGE = TEXT-E43
                            CHANGING CT_RESPONSE = CT_RESPONSE
                                     CS_QUOTATION = CS_QUOTATION ).
        ENDIF.
      ENDIF.

      "ItemCategory
      IF <LFS_QUOTATIONITEM>-ITEMCATEGORY IS INITIAL.
        "Missing Item Category
        APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                   IF_MESSAGE = TEXT-E44
                          CHANGING CT_RESPONSE = CT_RESPONSE
                                   CS_QUOTATION = CS_QUOTATION ).
      ELSE.
        SELECT SINGLE PSTYV         ##NEEDED
          FROM TVAP
         WHERE PSTYV = @<LFS_QUOTATIONITEM>-ITEMCATEGORY
          INTO @DATA(LV_PSTYV).
        IF SY-SUBRC <> 0.
          "Item Category does not exist
          APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                     IF_MESSAGE = TEXT-E45
                            CHANGING CT_RESPONSE = CT_RESPONSE
                                     CS_QUOTATION = CS_QUOTATION ).
        ENDIF.
      ENDIF.

      "WBS
      IF CS_QUOTATION-DOCUMENTTYPE IN GRT_SALESTYPEPRJ. "SDS Project Order
        IF <LFS_QUOTATIONITEM>-ITEMCATEGORY NOT IN GRT_SALESTYPEPRJ_ITEMCAT.
          IF <LFS_QUOTATIONITEM>-WBS IS INITIAL.

            APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                       IF_MESSAGE = TEXT-E46
                              CHANGING CT_RESPONSE = CT_RESPONSE
                                       CS_QUOTATION = CS_QUOTATION ).
          ENDIF.
        ENDIF.
      ENDIF.

      "LOB
      IF <LFS_QUOTATIONITEM>-LOB IS NOT INITIAL.
        SELECT SINGLE LOB                     ##WARN_OK  ##NEEDED
          FROM ZDSMMC033
         WHERE LOB = @<LFS_QUOTATIONITEM>-LOB
          INTO @DATA(LS_LOB).
        IF SY-SUBRC <> 0.
          APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                     IF_MESSAGE = TEXT-E47
                            CHANGING CT_RESPONSE = CT_RESPONSE
                                     CS_QUOTATION = CS_QUOTATION ).
        ENDIF.
      ENDIF.

      "ReasonForReject
      IF <LFS_QUOTATIONITEM>-REASONFORREJECT IS NOT INITIAL.
        SELECT SINGLE ABGRU       ##NEEDED
          FROM TVAG
         WHERE ABGRU = @<LFS_QUOTATIONITEM>-REASONFORREJECT
          INTO @DATA(LS_ABGRU).
        IF SY-SUBRC <> 0.
          APPEND_RESPONSE( EXPORTING IF_STATUS = GC_ERROR
                                     IF_MESSAGE = TEXT-E48
                            CHANGING CT_RESPONSE = CT_RESPONSE
                                     CS_QUOTATION = CS_QUOTATION ).
        ENDIF.
      ENDIF.


      "ListPrice":
      IF <LFS_QUOTATIONITEM>-LISTPRICE IS NOT INITIAL.
