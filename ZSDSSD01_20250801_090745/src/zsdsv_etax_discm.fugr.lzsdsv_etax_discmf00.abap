ZSDSV_ETAX_DISCM-ZCRT_USER .
ZSDSSDC018-ZCRT_PGM =
ZSDSV_ETAX_DISCM-ZCRT_PGM .
ZSDSSDC018-ZUPD_DATE =
ZSDSV_ETAX_DISCM-ZUPD_DATE .
ZSDSSDC018-ZUPD_TIME =
ZSDSV_ETAX_DISCM-ZUPD_TIME .
ZSDSSDC018-ZUPD_USER =
ZSDSV_ETAX_DISCM-ZUPD_USER .
ZSDSSDC018-ZUPD_PGM =
ZSDSV_ETAX_DISCM-ZUPD_PGM .
    IF SY-SUBRC = 0.
    UPDATE ZSDSSDC018 ##WARN_OK.
    ELSE.
    INSERT ZSDSSDC018 .
    ENDIF.
