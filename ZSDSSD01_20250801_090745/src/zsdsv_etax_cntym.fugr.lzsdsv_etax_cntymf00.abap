     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZSDSSDC020 WHERE
  LAND1 = ZSDSV_ETAX_CNTYM-LAND1 .
    IF SY-SUBRC = 0.
    DELETE ZSDSSDC020 .
