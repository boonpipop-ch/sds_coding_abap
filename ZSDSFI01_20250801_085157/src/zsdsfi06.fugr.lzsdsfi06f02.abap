FORM get_file_path .

  IF gs_file_path IS INITIAL.

    CALL FUNCTION 'ZETX_GET_FILE_PATH'
      IMPORTING
        ex_wa_file_path = gs_file_path.

  ENDIF.

ENDFORM.
