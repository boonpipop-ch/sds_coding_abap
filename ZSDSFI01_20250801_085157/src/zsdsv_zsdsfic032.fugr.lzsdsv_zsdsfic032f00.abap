ZSDSV_ZSDSFIC032-WT_WITHCD .
ZSDSFIC032-WT_WITHCD_TXT =
ZSDSV_ZSDSFIC032-WT_WITHCD_TXT .
ZSDSFIC032-BANK_WITHTYPE =
ZSDSV_ZSDSFIC032-BANK_WITHTYPE .
ZSDSFIC032-WITHTYPE_EN =
ZSDSV_ZSDSFIC032-WITHTYPE_EN .
ZSDSFIC032-WITHTYPE_TH =
ZSDSV_ZSDSFIC032-WITHTYPE_TH .
    IF SY-SUBRC = 0.
    UPDATE ZSDSFIC032 ##WARN_OK.
    ELSE.
    INSERT ZSDSFIC032 .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
