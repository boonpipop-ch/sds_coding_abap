FORM DB_UPD_ZSDSV_ZSDSFIC032 .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZSDSV_ZSDSFIC032.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZSDSV_ZSDSFIC032-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZSDSFIC032 WHERE
  BUKRS = ZSDSV_ZSDSFIC032-BUKRS AND
  WITHT = ZSDSV_ZSDSFIC032-WITHT AND
  WT_WITHCD = ZSDSV_ZSDSFIC032-WT_WITHCD .
    IF SY-SUBRC = 0.
    DELETE ZSDSFIC032 .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZSDSFIC032 WHERE
  BUKRS = ZSDSV_ZSDSFIC032-BUKRS AND
  WITHT = ZSDSV_ZSDSFIC032-WITHT AND
  WT_WITHCD = ZSDSV_ZSDSFIC032-WT_WITHCD .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZSDSFIC032.
    ENDIF.
ZSDSFIC032-MANDT =
ZSDSV_ZSDSFIC032-MANDT .
ZSDSFIC032-BUKRS =
ZSDSV_ZSDSFIC032-BUKRS .
ZSDSFIC032-WITHT =
ZSDSV_ZSDSFIC032-WITHT .
