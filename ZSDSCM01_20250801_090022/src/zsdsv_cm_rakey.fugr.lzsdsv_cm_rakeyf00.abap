FORM DB_UPD_ZSDSV_CM_RAKEY .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZSDSV_CM_RAKEY.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZSDSV_CM_RAKEY-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZSDSCMC004 WHERE
  SALES_ORG_SD = ZSDSV_CM_RAKEY-SALES_ORG_SD AND
  PROCESS_TYPE = ZSDSV_CM_RAKEY-PROCESS_TYPE AND
  ITM_TYPE = ZSDSV_CM_RAKEY-ITM_TYPE .
    IF SY-SUBRC = 0.
    DELETE ZSDSCMC004 .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZSDSCMC004 WHERE
  SALES_ORG_SD = ZSDSV_CM_RAKEY-SALES_ORG_SD AND
  PROCESS_TYPE = ZSDSV_CM_RAKEY-PROCESS_TYPE AND
  ITM_TYPE = ZSDSV_CM_RAKEY-ITM_TYPE .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZSDSCMC004.
    ENDIF.
ZSDSCMC004-MANDT =
ZSDSV_CM_RAKEY-MANDT .
