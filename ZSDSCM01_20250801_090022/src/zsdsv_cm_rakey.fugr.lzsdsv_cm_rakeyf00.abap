ZSDSV_CM_RAKEY-ZUPD_USER .
ZSDSCMC004-ZUPD_PGM =
ZSDSV_CM_RAKEY-ZUPD_PGM .
    IF SY-SUBRC = 0.
    UPDATE ZSDSCMC004 ##WARN_OK.
    ELSE.
    INSERT ZSDSCMC004 .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
