ZSDSV_MAT_WRT-ZUPD_USER .
ZSDSCMC003-ZUPD_PGM =
ZSDSV_MAT_WRT-ZUPD_PGM .
    IF SY-SUBRC = 0.
    UPDATE ZSDSCMC003 ##WARN_OK.
    ELSE.
    INSERT ZSDSCMC003 .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
