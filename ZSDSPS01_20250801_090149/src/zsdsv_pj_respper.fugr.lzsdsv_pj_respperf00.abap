FORM DB_UPD_ZSDSV_PJ_RESPPER .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZSDSV_PJ_RESPPER.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZSDSV_PJ_RESPPER-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZSDSPSC003 WHERE
  VKGRP = ZSDSV_PJ_RESPPER-VKGRP .
    IF SY-SUBRC = 0.
    DELETE ZSDSPSC003 .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZSDSPSC003 WHERE
  VKGRP = ZSDSV_PJ_RESPPER-VKGRP .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZSDSPSC003.
    ENDIF.
ZSDSPSC003-MANDT =
ZSDSV_PJ_RESPPER-MANDT .
ZSDSPSC003-VKGRP =
ZSDSV_PJ_RESPPER-VKGRP .
ZSDSPSC003-VERNR =
