     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZSDSPSC001 WHERE
  PRJTY = ZSDSV_WBS_ITMTY-PRJTY AND
  ITMTY = ZSDSV_WBS_ITMTY-ITMTY .
