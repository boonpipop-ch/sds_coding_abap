*&---------------------------------------------------------------------*
FORM SET_ZERO_FLG .

  IF ZSDSV_IMP_DUTY-DUTY_PERCENT EQ 0.
    ZSDSV_IMP_DUTY-ZERO_FLG = ABAP_TRUE.
  ELSE.
    ZSDSV_IMP_DUTY-ZERO_FLG = ABAP_FALSE.
  ENDIF.

ENDFORM.
