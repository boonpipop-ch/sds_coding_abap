  METHOD GET_SUM_DATA.
    DATA LCL_STOCK TYPE REF TO ZCL_SDSMM_AVAILABLE_STOCK_NEW.

    DATA : LS_SELECTION TYPE ZSDSMMS056.

    IF LCL_STOCK IS NOT BOUND.
      CREATE OBJECT LCL_STOCK.
    ENDIF.

    LS_SELECTION-PH1 = C_DATA-SELECTION_PH1.
    LS_SELECTION-PH2 = C_DATA-SELECTION_PH2.
    LS_SELECTION-PH3 = C_DATA-SELECTION_PH3.
    LS_SELECTION-MATNR = C_DATA-SELECTION_MAT.

    C_DATA-SUM_DATA = LCL_STOCK->FG( I_WERKS          = C_DATA-WERKS
                                     I_DATA_SELECTION = LS_SELECTION ).

  ENDMETHOD.
